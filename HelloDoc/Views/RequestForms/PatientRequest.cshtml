@{
    ViewData["Title"] = "\"Submit Request As - Patient\"";
}
@{
}
@model HelloDoc.DataModels.Request;

<div class="container pb-5 mb-5">
    <div class="d-flex subinfodiv align-items-center py-3">
        <div class="h3 subinfotext fw-bold">Submit Information</div>
        <div>
            <a asp-controller="Home" asp-action="PatientRequestScreen">
                <button class="d-flex babtn rounded align-item-center p-1 px-2">
                    <div><img src="~/back.png" width="15px" height="10px"></div>
                    <div><span>Back</span></div>
                </button>
            </a>
        </div>
    </div>
    <form asp-controller="RequestForms" asp-action="Self" method="post">
        <div class="bglight rounded p-3 shadow" id="content">
            <input type="number" asp-for="Requesttypeid" value="1" hidden/>
            <input type="number" asp-for="Status" value="1" hidden/>
            <input type="number" asp-for="Isurgentemailsent" value="1" hidden />
            <div>
                <div class="h5 fw-bold">Patient Information</div>
                <div class="row d-flex">
                    <div class="py-2 col-12 ">
                        <div class="form-group rounded d-flex align-items-center">
                            <textarea  class="form-control" placeholder=" " rows="3"></textarea><span>Enter Brief Details Of Symptomps (Optional)</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="Firstname"><span>First Name</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="Lastname"><span>Last Name</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="date" class="form-control" placeholder="" required="required" ><span>Date of Birth</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">Patient Contact Information</div>
                <div class="row d-flex">
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="email" class="form-control" placeholder="" required="required" asp-for="User.Email"><span>Email</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="telephone rounded">
                            <div class="input-group d-flex align-items-center rounded ">
                                <input type="tel" id="tel" class="form-control" >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">Patient Location</div>
                <div class="row d-flex">
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="User.Street"><span>Street</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="User.City"><span>City</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="User.State"><span>State</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" asp-for="User.Zip"><span>Zip Code</span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="text" class="form-control" placeholder="" required="required" ><span>Room # / Suite (Optional)</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">(Optional) Upload Photo or Document</div>
                <div class="row d-flex">
                    <div class="py-2 col-12 ">
                        <div class="form-group rounded d-flex align-items-center justify-content-between uploadbtndiv">
                            <div class="px-3 table-responsive">
                                <lable class="choosenfile text-dark text-nowrap" id="file-chosen">No item selected</lable>
                            </div>
                            <div role="button" class="uploadbtn px-2 py-1 d-flex ms-1">
                                <input type="file" id="actual-btn" hidden />
                                <label role="button" for="actual-btn" class="d-flex align-items-center"><i class="bi bi-cloud-arrow-up p-2"></i><div>Upload</div></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="row d-flex justify-content-end">
                    <div class="py-2 col-xl-1 col-md-2 col-4 align-items-center">
                        <div class="form-group d-flex  border-0">
                            <button type="submit" class="p-2 uploadbtn rounded w-100  border-0">
                                Submit
                            </button>
                        </div>
                    </div>
                    <div class="py-2 col-xl-1 col-md-2 col-4 align-items-center">
                        <div class="form-group d-flex   border-0">
                            <button type="reset" class="p-2 babtn rounded w-100">
                                Cancel
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>