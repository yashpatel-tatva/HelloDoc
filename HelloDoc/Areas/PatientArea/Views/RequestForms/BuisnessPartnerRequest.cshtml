@using HelloDoc.Areas.PatientArea.ViewModels
@{
    ViewData["Title"] = "\"Submit Request As - Businesspartner\"";
}
@Html.Partial("_InfoModel")
@model BusinessPartnerRequestViewModel
<div class="container pb-5 mb-5">
    <div class="d-flex subinfodiv align-items-center py-3">
        <div class="h3 subinfotext fw-bold">Submit Information</div>
        <div>
            <a asp-controller="Home" asp-action="PatientRequestScreen">
                <button class="d-flex babtn rounded align-item-center p-1 px-2">
                    <div><img src="~/res/back.png" width="15px" height="10px"></div>
                    <div><span>Back</span></div>
                </button>
            </a>
        </div>
    </div>
    <form asp-controller="BusinessPartnerRequestForm" asp-action="BuisneesPartnerRequest" method="post">
        <div class="bglight rounded p-3 shadow" id="content">
            <div>
                <div class="h5 fw-bold">Business Information</div>
                <div class="row d-flex">
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="B_FirstName" ><span>Your First Name</span>
                        </div>
                        <span asp-validation-for="B_FirstName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="B_LastName" ><span>Your Last Name</span>
                        </div>
                        <span asp-validation-for="B_LastName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="telephone rounded">
                            <div class="input-group d-flex align-items-center rounded ">
                                <input type="tel" id="tel" class="form-control" asp-for="B_Phone">
                            </div>
                            <span asp-validation-for="B_Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="email" class="form-control" placeholder="" asp-for="B_Email" ><span>Your Email</span>
                        </div>
                        <span asp-validation-for="B_Email" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="PropertyName" ><span>Business/Property Name</span>
                        </div>
                        <span asp-validation-for="PropertyName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="CaseNumber" ><span>Case Number</span>
                        </div>
                        <span asp-validation-for="CaseNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">Patient Information</div>
                <div class="row d-flex">
                    <div class="py-2 col-12 ">
                        <div class="form-group rounded d-flex align-items-center">
                            <textarea class="form-control" placeholder=" " asp-for="Symptoms" rows="3"></textarea><span>Enter Brief Details Of Symptoms (Optional)</span>
                        </div>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="FirstName" ><span>First Name</span>
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="LastName" ><span>Last Name</span>
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="form-group d-flex align-items-center rounded">
                            @{
                                string today = DateTime.Today.ToString("yyyy-MM-dd");
                            }
                            <input type="date" class="form-control" placeholder="" min="1940-01-01" max=@today asp-for="BirthDate" ><span>Date of Birth</span>
                        </div>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">Patient Contact Information</div>
                <div class="row d-flex">
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="email" class="form-control" placeholder="" asp-for="Email" ><span>Email</span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="telephone rounded">
                            <div class="input-group d-flex align-items-center rounded ">
                                <input type="tel" id="tel1" class="form-control" asp-for="Phone">
                            </div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="h5 fw-bold">Patient Location</div>
                <div class="row d-flex">
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="Street" maxlength="50" ><span>Street</span>
                        </div>
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="City" ><span>City</span>
                        </div>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="State" ><span>State</span>
                        </div>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="ZipCode" ><span>Zip Code</span>
                        </div>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                        <div class="form-group d-flex align-items-center rounded">
                            <input type="textbox" class="form-control" placeholder="" asp-for="Room" ><span>Room # / Suite (Optional)</span>
                        </div>
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="row d-flex justify-content-end">
                    <div class="py-2 col-xl-1 col-md-2 col-4 align-items-center">
                        <div class="form-group d-flex  border-0">
                            <button type="submit" class="p-2 uploadbtn rounded w-100  border-0">
                                Submit
                            </button>
                        </div>
                    </div>
                    <div class="py-2 col-xl-1 col-md-2 col-4 align-items-center">
                        <div class="form-group d-flex   border-0">
                            <button type="reset" class="p-2 babtn rounded w-100">
                                Cancel
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
