@model HelloDoc.Areas.Patient.ViewModels.PatientDashboardViewModel;
<div class="container-fluid pb-5 mb-5">
    <div class="px-4">
        <div class="d-flex justify-content-between align-items-center py-3">
            <div class="h3 mb-0 fw-bold">User Profile</div>
            <div>
                <a asp-controller="Dashboard" asp-action="Dashboard">
                    <button class="d-flex babtn rounded align-item-center p-1 px-2">
                        <div><img src="~/back.png" width="15px" height="10px"></div>
                        <div><span>Back</span></div>
                    </button>
                </a>
            </div>
        </div>
        <div class="bg-light rounded p-3 shadow" id="content1">
            <form asp-action="Edit" asp-controller="Dashboard">
                <div>
                    <div class="h5 fw-bold">Patient Information</div>
                    <div class="row d-flex">
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.Firstname" required="required" disabled><span>First Name</span>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.Lastname" required="required" disabled><span>Last Name</span>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="date" class="form-control" placeholder="" asp-for="birthdate" required="required" disabled><span>Date of Birth</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="h5 fw-bold">Patient Contact Information</div>
                    <div class="row d-flex">
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                            <div class="telephone rounded">
                                <div class="input-group d-flex align-items-center rounded ">
                                    <input type="tel" id="tel" class="form-control" asp-for="User.Mobile" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="email" class="form-control" placeholder="" asp-for="User.Email" required="required" id="patientEmail" disabled> <span>Email</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="h5 fw-bold">Patient Location</div>
                    <div class="row d-flex">
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.Street" required="required" disabled><span>Street</span>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.City" required="required" disabled><span>City</span>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.State" required="required" disabled><span>State</span>
                            </div>
                        </div>
                        <div class="py-2 col-xl-6 col-md-6 col-sm-12 ">
                            <div class="form-group d-flex align-items-center rounded">
                                <input type="text" class="form-control" placeholder="" asp-for="User.Zip" required="required" disabled><span>Zip Code</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="row d-flex justify-content-end">
                        <div class="py-2 col-xl-1 col-md-2 col-4 align-items-center">
                            <div class="form-group d-flex justify-content-end   border-0">
                                <a id="editButton" class="p-2 btn btn-info  rounded w-80 text-decoration-none " >
                                    <h5 class="text-white px-2 mb-0">Edit</h5>
                                </a>

                                <button id="saveButton" class="p-2 btn btn-info  rounded w-80" type="submit" hidden>
                                    <h5 class="text-white px-2 mb-0">Save</h5>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#editButton').click(function () {
            console.log("hjdscvgfhjav")
            // Remove disabled attribute to make inputs editable
            // $('#name').prop('disabled', false);
            // $('#age').prop('disabled', false);
            $('input[type="text"]').removeAttr('disabled', false);
            $('input[type="date"]').removeAttr('disabled', false);
            $('input[type="tel"]').removeAttr('disabled', false);
            $('input[type="email"]').removeAttr('disabled', false);
            // Hide the edit button after clicking it
            $(this).hide();
            $('#saveButton').removeAttr('hidden', false);
        });
    });
</script>