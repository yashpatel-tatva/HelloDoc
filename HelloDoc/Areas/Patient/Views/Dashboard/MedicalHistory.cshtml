@using System.Globalization;
@model HelloDoc.Areas.Patient.ViewModels.PatientDashboardViewModel;
<div class="container-fluid pb-5 mb-5">
    <div class="px-4">
        <div class="d-flex subinfodiv align-items-center py-3">
            <div class="h3 subinfotext fw-bold">Medical History </div>
        </div>
        <div class="bg-white rounded p-3 shadow" id="content">
            <div class="d-flex justify-content-end">
                <a asp-controller="Dashboard" asp-action="Dashboard">
                    <button class="d-flex babtn rounded align-item-center p-1 px-2">
                        <div class="plusimg"><i class="bi bi-plus-lg"></i></div>
                        <div class="cnr"><span>Create New request</span></div>
                    </button>
                </a>
            </div>
            <div>
                <table class="table table-hover" id="dtBasicExample">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Document
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.Requests)
                        {
                            <tr>
                                <td>@m.Createddate.ToString("MMM dd , yyyy")</td>
                                <td>@Model.Statusname(m.Status)</td>
                                <td>
                                    @*@foreach (var n in m.Requestwisefiles)
                                    {
                                        <span>@n.Filename ,</span>
                                    }*@
                                    @if (m.Requestwisefiles.Count() != 0)
                                    {
                                        <a asp-controller="Dashboard" asp-action="Document">
                                            <button class="d-flex babtn rounded align-item-center p-1 px-2">
                                                <div class="plusimg">(@m.Requestwisefiles.Count()) </div>
                                                <div class="cnr"><span>(@m.Requestwisefiles.Count()) Documnets</span></div>
                                            </button>
                                        </a>
                                    }
                                </td>
                                @*<td><a asp-action="Index" asp-controller="Requests" asp-route-itemid="@m.Requestid">Edit</a></td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    //data table initiate
    $(document).ready(function () {
        $('#dtBasicExample').DataTable({
            info: false,
            ordering: true,
            paging: false,
            searching : false,
            
        });
    });


</script>