@{
    Layout = null;
}
@using DataModels.AdminSideViewModels
@model List<EmailSMSLogsViewModel>
<table class="w-100  table-hover table" style="vertical-align : middle">
    <thead style="background-color: rgb(235, 235, 235)!important ; color: black !important ; font :normal!important">
        <tr style="--bs-table-bg: #ebebeb; color : black">
            <th style="width : 10% !important">Recipient</th>
            <th style="width : 10% !important">Action</th>
            <th style="width :8% !important">Role Name</th>
            <th style="width : 18% !important">Mobile Number</th>
            <th style="width : 15% !important">Created Date</th>
            <th style="width : 10% !important">Sent Date</th>
            <th style="width : 5% !important">Sent</th>
            <th style="width : 7% !important">Sent Tries</th>
            <th style="width : 15% !important">Confirmation Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Recipient</td>
                <td>@i.Action</td>
                <td>@i.RoleName</td>
                <td>@i.Mobile</td>
                <td>@i.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                <td>@i.SentDate.ToString("MMM dd, yyyy")</td>
                @if (i.Sent)
                {
                    <td>
                        Yes
                    </td>
                }
                else
                {
                    <td>
                        No
                    </td>
                }
                <td>@i.Senttries</td>
                <td>@i.ConfirmationNo</td>
            </tr>
        }
    </tbody>
</table>