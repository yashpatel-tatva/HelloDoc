@{
    int id = (int)Context.Session.GetInt32("AdminId");
    string username = Context.Session.GetString("UserName");
}
@using DataModels.AdminSideViewModels;
@model DashpopupsViewModel;

<nav style="background-color:white" class="resstartpadding">
    <div class="mainnav">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dashboard</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-ProviderLocation" type="button" role="tab" aria-controls="nav-ProviderLocation" aria-selected="false">Provider Location</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-Profile" type="button" role="tab" aria-controls="nav-Profile" aria-selected="false">My Profile</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-Providers" type="button" role="tab" aria-controls="nav-Providers" aria-selected="false">Providers</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-Partners" type="button" role="tab" aria-controls="nav-Partners" aria-selected="false">Partners</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-Access" type="button" role="tab" aria-controls="nav-Access" aria-selected="false">Access</button>
            <button class="nav-link maintabs me-3" data-bs-toggle="tab" data-bs-target="#nav-Records" type="button" role="tab" aria-controls="nav-Records" aria-selected="false">Records</button>
        </div>
    </div>
</nav>
<div class="position-relative">
    <div class="offcanvas offcanvas-start position-absolute" data-bs-scroll="false" style="width:65%" tabindex="-1" id="layoutnav" aria-labelledby="offcanvasWithBackdropLabel">
        <span class="p-2 "> <span class="small">Welcome , </span><b>@username</b></span>
        <div class="maintabsul">
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dashboard</div>
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-ProviderLocation" type="button" role="tab" aria-controls="nav-ProviderLocation" aria-selected="false">Provider </div>
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-Profile" type="button" role="tab" aria-controls="nav-Profile" aria-selected="false">My Profile</div>
            <div class="accordion customaccordion p-0" id="accordionExample">
                <div class="accordion-item border-0 shadow-none">
                    <button class="accordion-button sidebar collapsed p-0 m-0 align-items-center shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        <h6 class="mb-0" id="headingTwo" style="padding : 5px 10%">
                            Providers
                        </h6>
                    </button>
                    <div id="collapseTwo" class="accordion-collapse collapse sidebar" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <ul class="accordion-body sidebar m-0" style="list-style : inside">
                            <li>Provider</li>
                            <li>Scheduling</li>
                            <li>Invoice</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-Partners" type="button" role="tab" aria-controls="nav-Partners" aria-selected="false">Partners</div>
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-Access" type="button" role="tab" aria-controls="nav-Access" aria-selected="false">Access</div>
            <div class="accordianmaintabs" data-bs-toggle="tab" data-bs-target="#nav-Records" type="button" role="tab" aria-controls="nav-Records" aria-selected="false">Records</div>
        </div>
    </div>
    <div class="tab-content respadding" id="nav-tabContent">
    </div>

    <div class="modal fade rounded-3 shadow" id="AssignCasemodal" tabindex="-1" role="dialog" aria-labelledby="AssignCasemodal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Assign Request</h5>
                    <button class="btn" type="button" data-dismiss="modal">
                        <i class="fa-solid fa-xmark" style="color: #ffffff;"></i>
                    </button>
                </div>
                <form asp-action="AssignCase" asp-controller="Dashboard" method="post">
                    <div class="modal-body">
                        <input type="number" class="inputhiddenrequestid" name="RequestId" hidden />

                        <label class="my-2 text-secondary  fw-normal mb-3" style="font-size:12.8px">To Assign This Request, search and selectanother Physician</label>

                        <select class="form-select form-select-lg mb-3 fs-6 form-control regiondropdown" asp-for="RegionId" aria-label=".form-select-lg example" required>
                        </select>

                        <select class="form-select form-select-lg mb-3 fs-6 form-control physiciandropdown" id="physiciandropdown" asp-for="PhysicianId" aria-label=".form-select-lg example" required>
                        </select>

                        <div class="form-group rounded d-flex align-items-center">
                            <textarea class="form-control  shadow-none" asp-for="Notes" placeholder="" rows="5"></textarea>
                            <span>Provide Additional Notes</span>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" id="confirmbutton" class="btn btn-info text-white">Confirm</button>
                        <button type="button" class="btn btn-outline-info" data-dismiss="modal">Cancle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="CancelCaseModal" tabindex="-1" role="dialog" aria-labelledby="CancelcaseTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Confirm Cancellation</h5>
                    <button type="button" class="btn" data-dismiss="modal" aria-label="Close">
                        <i class="fa-solid fa-xmark text-white"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="CancelCase" asp-controller="Dashboard" method="post">
                        <input type="number" class="inputhiddenrequestid" name="RequestId" hidden />
                        <div class="mb-3">Patient Name : <span class="patientname text-info"></span> </div>
                        <div class="">
                            <select class="form-select form-select-lg mb-3 fs-6 shadow-none cancleselect" asp-for="CaseTagID" aria-label=".form-select-lg example">
                            </select>
                        </div>
                        <div class="form-group rounded d-flex align-items-center">
                            <textarea class="form-control  shadow-none" asp-for="Notes" placeholder="" rows="5"></textarea>
                            <span>Provide Additional Notes</span>
                        </div>
                        <div class="d-flex float-end mt-4">
                            <button type="submit" class="btn btn-info text-white mx-2 shadow-none">Confirm</button>
                            <button type="button" class="btn border-info text-info shadow-none" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="BlockPatientsmodal" tabindex="-1" role="dialog" aria-labelledby="BlockCaseTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Confirm Block</h5>
                    <button type="button" class="btn" data-dismiss="modal" aria-label="Close">
                        <i class="fa-solid fa-xmark text-white"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="BlockRequest" asp-controller="Dashboard" method="post">
                        <div class="mb-3">Patient Name : <span class="patientname text-info"></span> </div>
                        <input type="number" class="inputhiddenrequestid" name="RequestId" hidden />
                        <div class="form-group rounded d-flex align-items-center">
                            <textarea class="form-control  shadow-none" placeholder="" rows="5" asp-for="Blockreason"></textarea>
                            <span>Reason for Block Request</span>
                        </div>
                        <span asp-validation-for="Blockreason"></span>
                        <div class="d-flex float-end mt-4">
                            <button type="submit" class="btn btn-info text-white mx-2 shadow-none">Confirm</button>
                            <button type="button" class="btn border-info text-info shadow-none" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>


<script>
    $(document).ready(function () {
        function handleTabClick(target) {
            var url;
            switch (target) {
                case '#nav-home':
                    url = '../Dashboard/Dashboard';
                    break;
                case '#nav-ProviderLocation':
                    url = '../Dashboard/Status_Pending';
                    break;
                case '#nav-Profile':
                    url = '../Dashboard/Status_Active';
                    break;
                case '#nav-Providers':
                    url = '../Dashboard/Status_Conclude';
                    break;
                case '#nav-Partners':
                    url = '../Dashboard/Status_Toclose';
                    break;
                case '#nav-Access':
                    url = '../Dashboard/Status_Unpaid';
                    break;
                case '#nav-Records':
                    url = '../Dashboard/Status_Unpaid';
                    break;
                default:
                    url = '../Home/AdminLogin';
            }

            $.ajax({
                url: url,
                success: function (response) {
                    $('#nav-tabContent').html(response);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
        function handleTabTriggers() {
            var target = localStorage.getItem('target');
            if (target == null) {
                if ($(window).width() < 760) {
                    $('.accordianmaintabs[data-bs-target="#nav-home"]').trigger('click');
                } else {
                    $('.maintabs[data-bs-target="#nav-home"]').trigger('click');
                }
            } else {
                if ($(window).width() < 760) {
                    $('.accordianmaintabs[data-bs-target="' + target + '"]').trigger('click');
                } else {
                    $('.maintabs[data-bs-target="' + target + '"]').trigger('click');
                }
            }
        }
        $('.maintabs').on('click', function (e) {
            e.preventDefault();
            $(this).addClass('active');
            var target = $(this).data('bs-target');
            localStorage.setItem('target', target);
            handleTabClick(target);
        });

        $('.accordianmaintabs').on('click', function (e) {
            console.log("hii");
            e.preventDefault();
            $('.accordianmaintabs').removeClass('active');
            $(this).addClass('active');
            var target = $(this).data('bs-target');
            console.log(target);
            localStorage.setItem('target', target);
            handleTabClick(target);
        });

        handleTabTriggers();

        $(window).resize(function () {
            handleTabTriggers();
        });
    });
</script>
