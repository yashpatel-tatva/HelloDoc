@{
    Layout = null;
}
@using DataModels.AdminSideViewModels;
@model RequestViewUploadsViewModel;

<div class="container">
    <div class="">
        <div class="d-flex justify-content-between">
            <div class="h3 subinfotext fw-bold">Documents</div>
            <div>
                <a asp-controller="Home" asp-action="AdminTabsLayout">
                    <button class="d-flex babtn rounded align-item-center p-1 px-2">
                        <div><img src="~/res/back.png" width="15px" height="10px"></div>
                        <div><span>Back</span></div>
                    </button>
                </a>
            </div>
        </div>
        <div class="bg-white rounded p-3 shadow" id="content">
            <form>
                <div><span class="small">Patient Name </span></div>
                <div class=""><span class="text-info h4">@Model.patientname  </span><span class="h6">(@Model.confirmation)</span></div>
                <div class="py-3"><span class="small">Check here to review and add files that you or the Client/Member has attached to the Request</span></div>
                <div class="row d-flex">
                    <div class="py-2 col-12 ">
                        <div class="form-group rounded d-flex align-items-center justify-content-between uploadbtndiv">
                            <div class="px-3 table-responsive">
                                <input type="hidden" class="RequestsId" value="@Model.RequestsId" />
                                <input type="file" id="actual-btn" asp-for="Upload" multiple hidden />
                                <label role="button" for="actual-btn" id="file-chosen" class="choosenfile text-dark text-nowrap">No item selected</label>
                            </div>
                            <button type="button" class="uploadbtn px-2 py-1 d-flex ms-1 border-0">
                                <label role="button" class="d-flex align-items-center"><i class="bi bi-cloud-arrow-up p-2"></i><div class="cnr">Upload</div></label>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="RequestsId" value="@Model.RequestsId" />
                <div class="d-flex justify-content-between align-items-center py-3">
                    <div class="h4 mb-0 fw-bold">Documents</div>
                    <div class="d-flex gap-3">
                        <button class="d-flex babtn rounded align-item-center p-1 px-2 downloadall" type="button">
                            <div class="plusimg"><i class="bi bi-cloud-arrow-down"></i></div>
                            <div class="cnr"><span>Download All</span></div>
                        </button>
                        <button class="d-flex babtn rounded align-item-center p-1 px-2 deleteall" type="button">
                            <div class="plusimg"><i class="bi bi-trash"></i></div>
                            <div class="cnr"><span>Delete All</span></div>
                        </button>
                        <button class="d-flex babtn rounded align-item-center p-1 px-2 sendemail" type="button">
                            <div class="plusimg"><i class="bi bi-envelope-plus"></i></div>
                            <div class="cnr"><span>Send Email</span></div>
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover small rounded" id="dtBasicExample1">
                        <thead class="thead-dark bg-body-secondary viewuploadtablehead">
                            <tr style="--bs-table-bg: #ebebeb; color : black" class="d-flex justify-content-between">
                                <th style="width : 64%"><input type="checkbox" id="download_@Model.RequestsId" name="downloadmainselect" class="me-3" />File Name</th>
                                <th style="width : 18%" class="text-dark">
                                    Upload Date
                                </th>
                                <th style="width : 18%" class="text-dark">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.requestwisefiles)
                            {
                                <tr class="d-flex justify-content-between">
                                    <td style="width : 64%">
                                        <input type="checkbox" class="childCheckbox me-3" id="download_@m.Requestwisefileid" name="downloadselect" value="@m.Requestwisefileid" />
                                        <button type="button" class="viewfile bg-transparent border-0" data-toggle="tooltip" data-placement="top" title="View File" value="@m.Requestwisefileid">@System.IO.Path.GetFileName(@m.Filename)</button>
                                    </td>
                                    <td style="width : 18%">@m.Createddate.ToString("MMM dd , yyyy")</td>
                                    <td style="width : 18%">
                                        <div class="d-flex justify-content-start">
                                            <a asp-action="Download" asp-controller="Dashboard" asp-route-id="@m.Requestwisefileid" class="justify-content-start d-flex">
                                                <input type="hidden" asp-for="reqfileid" value="@m.Requestwisefileid" multiple>
                                                <div class="babtn rounded align-item-center p-1 px-2" style="width : 40px">
                                                    <div class="d-flex justify-content-center"><i class="bi bi-cloud-arrow-down"></i></div>
                                                </div>
                                            </a>
                                            <button type="button" class="viewfilebtn viewfile bg-transparent border-0 justify-content-start d-flex" value="@m.Requestwisefileid">
                                                <div class="babtn rounded align-item-center p-1 px-2" style="width : 40px">
                                                    <div><i class="bi  bi-eye-fill"></i></div>
                                                </div>
                                            </button>
                                            <button type="button" class="deletebtn bg-transparent border-0 justify-content-start d-flex" value="@m.Requestwisefileid">
                                                <div class="babtn rounded align-item-center p-1 px-2" style="width : 40px">
                                                    <div><i class="bi  bi-trash"></i></div>
                                                </div>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="~/js/ViewUploads.js" asp-append-version="true"></script>
<script src=~/js/site.js asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        $('#download_@Model.RequestsId').click(function () {
            $('.childCheckbox').prop('checked', $(this).prop('checked'));
        });

        $('.childCheckbox').click(function () {
            $('#download_@Model.RequestsId').prop('checked', $('.childCheckbox:checked').length === $('.childCheckbox').length);
        });
    });

    $('.viewfile').on('click', function () {
        var id = $(this).val();
        $.ajax({
            type: 'POST',
            url: 'AdminArea/Dashboard/ViewFile',
            data: { id: id },
            success: function (result) {
                window.open('/Documents/' + @Model.RequestsId + "/" + result);
            },
            error: function (xhr, status, error) {
                console.error('Error: ' + error);
            },
        });
    });
</script>