@{
    Layout = null;
}
<div class="container">
    <div class="d-flex justify-content-between">
        <div>View Reservation &nbsp; <span class="p-2 text-white rounded-3 bg-success"></span></div>
        <div>
            <a asp-action="AdminTabsLayout" asp-controller="Home">
                <button class="d-flex babtn border border-info border-1 rounded align-items-center p-1 px-2">
                    <div class="d-flex"><img src="~/res/back.png" width="15px" height="15px"></div>
                    <div class="px-1"><span>Back</span></div>
                </button>
            </a>
        </div>
    </div>
    <div class="bg-white rounded-3 p-3 mt-2 shadow">
        <div class="h5 fw-bold">Patient Information</div>
        <div class="mt-2">
            <div class="small text-muted">Confirmation Number</div>
            <div style="class-info">Confirmation Number</div>
        </div>
        <div class="py-2 col-12 ">
            <div class="form-group rounded d-flex align-items-center">
                <textarea class="form-control" placeholder="" rows="3" ></textarea><span>Patient Notes</span>
            </div>
        </div>
        <hr style="border : 1px dashed grey"/>
        <div class="row d-flex">
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="text" class="form-control" placeholder=""><span>First Name</span>
                </div>
            </div>
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="text" class="form-control" placeholder=""><span>Last Name</span>
                </div>
            </div>
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="date" class="form-control" placeholder="" min="1940-01-01" max="2000-01-01"><span>Date of Birth</span>
                </div>
            </div>
            <div class="py-2 col-xl-5 col-md-5 col-sm-10">
                <div class="telephone rounded">
                    <div class="input-group d-flex align-items-center rounded ">
                        <input type="tel" name="phone_number[main]" id="phone_number" class="form-control">
                    </div>
                </div>
            </div>
            <div class="py-2 col-xl-1 col-md-1 col-sm-2">
                <div class="border border-1 border-info d-flex w-100 h-100 align-items-center justify-content-center rounded">
                    <button class=" text-info border-0 bg-transparent"><i class="bi bi-telephone-fill" style="font-size : 1.5rem"></i></button>
                </div>
            </div>
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="email" class="form-control" placeholder=""><span>Email</span>
                </div>
            </div>
        </div>
        <div class="h5 fw-bold">Location Information</div>
        <div class="d-flex row">
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="text" class="form-control" placeholder=""><span>Region</span>
                </div>
            </div>
            <div class="py-2 col-xl-5 col-md-5 col-sm-10">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="text" class="form-control" placeholder=""><span>Business Name / Address</span>
                </div>
            </div>
            <div class="py-2 col-xl-1 col-md-1 col-sm-2">
                <div class="border border-1 border-info d-flex w-100 h-100 align-items-center justify-content-center rounded">
                    <button class=" text-info border-0 bg-transparent"><i class="bi bi-geo-alt-fill" style="font-size : 1.5rem"></i></button>
                </div>
            </div>
            <div class="py-2 col-xl-6 col-md-6 col-sm-12">
                <div class="form-group d-flex align-items-center rounded">
                    <input type="text" class="form-control" placeholder=""><span>Room#</span>
                </div>
            </div>
        </div>
    </div>
</div>