@using DataModels.AdminSideViewModels
@model DashpopupsViewModel

<div class="modal fade" id="ModalToOpen" tabindex="-1" role="dialog" aria-labelledby="CancelcaseTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white">Confirm Cancellation</h5>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark text-white"></i>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="number" id="inputhiddenrequestid" asp-for="RequestId" value="@Model.RequestId" hidden />
                    <div class="mb-3">Patient Name : <span class="patientname text-info">@Model.PatientName</span> </div>

                    <div class="">
                        <select class="form-select form-select-lg mb-3 fs-6 shadow-none cancleselect" id="casetagdropdown" aria-label=".form-select-lg example">
                            <option value="1234" hidden>Reason For Cancellation</option>
                            @foreach (var item in Model.casetags)
                            {
                                <option value="@item.Casetagid">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group rounded d-flex align-items-center">
                        <textarea class="form-control  shadow-none" id="Cancelreason" placeholder="" rows="5"></textarea>
                        <span>Provide Additional Notes</span>
                    </div>
                    <div class="d-flex float-end mt-4">
                        <button type="button" id="Cancelconfirmbutton" class=" p-2 px-3 text-white bg-info rounded border-info  mx-2 shadow-none ">Confirm</button>
                        <button type="button" class="btn border-info text-info shadow-none" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#Cancelconfirmbutton").on('click', function () {
        var casetag = $('.cancleselect').val();
        var requestid = $('#inputhiddenrequestid').val();
        var note = $('#Cancelreason').val();
        if (casetag == "1234") {
            $("#casetagdropdown").css("border-color", "red");
        } else {
            $.ajax({
                url: '/AdminArea/Dashboard/CancelCase',
                type: 'POST',
                data: { requestid: requestid, casetag : casetag, note: note },
                success: function (result) {
                    Swal.fire({
                        position: "top-end",
                        icon: "success",
                        title: "Case Cancelled",
                        showConfirmButton: false,
                        timer: 1000
                    });
                    setTimeout(function () {
                        location.reload();

                },
                error: function (xhr, status, error) {
                    console.error('Error: ' + error);
                },
            });
        }
    });
    
</script>
<script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" ></script>

    $(document).ready(function () {
        $('#ModalToOpen').draggable({
            handle: ".modal-dialog"
        });
    });
</script>