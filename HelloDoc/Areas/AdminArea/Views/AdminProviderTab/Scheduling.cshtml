@{
    Layout = null;
}
<div class="container">
    <div class="d-flex justify-content-between">
        <div class="h3 subinfotext fw-bold">Scheduling</div>
    </div>
    <div class="d-flex justify-content-between">
        <div>
            <select class="form-select  mb-0 fs-6 form-control drawbyregiondropdown">
                <option value="0">All Region</option>
            </select>
        </div>
        <div class="d-flex gap-2">
            <button class="p-2px-3mx-2 text-white bg-info rounded border-info d-flex align-items-center">
                <span>Provider On Call</span>
            </button>
            <button class="p-2px-3mx-2 text-white bg-info rounded border-info d-flex align-items-center">
                <span>Shifts For Review</span>
            </button>
            <button class="p-2px-3mx-2 text-white bg-info rounded border-info d-flex align-items-center" id="createnewshift">
                <span>Add New shifts</span>
            </button>
        </div>
    </div>
    <div class="h5 my-3" id="timesheet"></div>
    <div class="d-flex justify-content-end gap-2 my-3   ">
        <input type="radio" name="shiftstatus" id="pending" hidden />
        <label for="pending" class="d-flex gap-1">
            <div style="width:45px ; height:auto ; background-color : #efabd2" class="pendinground rounded-3"></div>
            <span class="d-flex align-items-center" style="text-wrap : nowrap">Pending Shifts</span>
        </label>
        <input type="radio" name="shiftstatus" id="approved" hidden />
        <label for="approved" class="d-flex gap-1">
            <div style="width:45px ; height:auto ; background-color : #a5cea4" class="approveround rounded-3"></div>
            <span class="d-flex align-items-center" style="text-wrap : nowrap">Approved Shifts</span>
        </label>
    </div>
    <div class="d-flex justify-content-between my-3">
        <div class="d-flex gap-2">
            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" id="previousbtn" style="height: 30px ; width : 30px ;"><i class="bi bi-chevron-left" style="color: #ffffff;"></i></div>
            <div class="d-flex align-items-center justify-content-center"  style="height: 30px ; width : 30px ;">
                <input  id="selectday" style="visibility: hidden; position: absolute;">
                <label for="selectday" onclick="document.getElementById('selectday').showPicker();">
                    <i class="bi bi-calendar-week"></i>
                </label>
            </div>
            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" id="nextbtn" style="height: 30px ; width : 30px ;"><i class="bi bi-chevron-right" style="color: #ffffff;"></i></div>
        </div>
        <div>
            <input type="radio" class="btn-check" name="showby" id="DayWiseData" hidden checked>
            <label class="btn btn-outline-info p-2px-3mx-2" for="DayWiseData">Day</label>
            <input type="radio" class="btn-check" name="showby" id="WeekWiseData" hidden>
            <label class="btn btn-outline-info p-2px-3mx-2" for="WeekWiseData">Week</label>
            <input type="radio" class="btn-check" name="showby" id="MonthWiseData" hidden>
            <label class="btn btn-outline-info p-2px-3mx-2" for="MonthWiseData">Month</label>
        </div>
    </div>
    <div id="timewisedata"></div>
    <div id="PopUps"></div>
</div>


<script src="~/js/Scheduling.js" asp-append-version="true"></script>
<link href="~/css/Scheduling.css" rel="stylesheet" asp-append-version="true" />