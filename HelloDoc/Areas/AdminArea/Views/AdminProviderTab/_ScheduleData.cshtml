@{
    Layout = "_SchedulerLayout";
}
@using DataModels.AdminSideViewModels
@model SchedulingDataViewModel
@using Syncfusion.EJ2.Schedule
<div class="mt-4">
    <ejs-schedule id="schedule" width="100%" height="550px" allowDragAndDrop="false" currentView="TimelineDay" rowAutoHeight="true" readonly="true">
        <e-schedule-views>
            <e-schedule-view option="TimelineDay" displayName="Day"></e-schedule-view>
            <e-schedule-view option="TimelineWeek" displayName="Week"></e-schedule-view>
            <e-schedule-view option="TimelineMonth" displayName="Month"></e-schedule-view>
            <e-schedule-view option="Agenda" displayName="Agenda"></e-schedule-view>
        </e-schedule-views>
        <e-schedule-group enableCompactView="false" resources="@ViewBag.ResourceNames"></e-schedule-group>
        <e-schedule-resources>
            <e-schedule-resource dataSource="@Model.physicianDatas" colorField="color" field="Physicianid" title="STAFF" name="MeetingRoom" allowMultiple="true" textField="Physicianname" idField="Physicianid"></e-schedule-resource>
        </e-schedule-resources>
        <e-schedule-eventsettings dataSource="@Model.Shifts">
            <e-eventsettings-fields>
                <e-field-location name="Location" title="Location"></e-field-location>
                <e-field-description name="Description" title="Comments"></e-field-description>
                <e-field-starttime name="StartTime" title="From"></e-field-starttime>
                <e-field-endtime name="EndTime" title="To"></e-field-endtime>
            </e-eventsettings-fields>
        </e-schedule-eventsettings>
    </ejs-schedule>
</div>