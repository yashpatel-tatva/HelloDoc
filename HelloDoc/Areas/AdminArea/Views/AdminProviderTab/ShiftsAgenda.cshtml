@{
    Layout = "_SchedulerLayout";
}
<div class="container">
    <div class="d-flex justify-content-between">
        <div class="h3 subinfotext fw-bold">RequestedShift</div>
    </div>
    <div class="bg-light rounded my-3 shadow" id="content">
        <div class="">
            <div class="d-flex p-3 justify-content-between align-items-center">
                <div>
                    <select class="form-select  mb-0 fs-6 form-control drawbyregiondropdown">
                        <option value="0">All Region</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button style="background-color: #1C5E1F; border-color: #1C5E1F; color: white !important; " class="p-2px-3mx-2 text-white rounded d-flex align-items-center" id="monthview">
                        <span>View Current Month Shifts</span>
                    </button>
                    <button style="background-color: #2E7D32; border-color: #2E7D32; color: white !important; " class="p-2px-3mx-2 text-white rounded d-flex align-items-center" id="approveselected" disabled>
                        <span>Approved Selected</span>
                    </button>
                    <button style="background-color: #D32F2F; border-color: #D32F2F; color: white !important; " class="p-2px-3mx-2 text-white rounded d-flex align-items-center" id="deleteselected" disabled>
                        <span>Delete Selected</span>
                    </button>
                </div>
            </div>
            <div class="table-responsive" id="_RequestedShifts">
            </div>
            <div class="d-flex align-items-center justify-content-between p-3 pagination_div">
                <div class="info_div">
                    <span id="fromthisshift"></span>
                    <span>-</span>
                    <span id="tothisshift"></span>
                    <span>out of</span>
                    <span id="totalcountofshift"></span>
                </div>
                <div class="d-flex align-items-center info_div">
                    <div class="paginate_Previousbutton text-info"><i class="bi bi-chevron-left"></i></i></div>
                    <div class="dataTables_paginate d-flex"></div>
                    <div class="paginate_Nextbutton text-info"><i class="bi bi-chevron-right"></i></div>
                </div>

            </div>
        </div>
    </div>
</div>

@{
    string shiftdatafromdb = Model.datetoshow.ToString("yyyy-MM-dd");
}
<input type="date" id="datetoshowfm" value=@shiftdatafromdb hidden>
<input type="text" id="showbyfm" value=@Model.showby hidden />
<input type="hidden" value="@Model.region" id="regionfm" />
<script src="~/js/ShiftsAgenda.js" asp-append-version="true"></script>
