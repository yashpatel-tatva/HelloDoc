            @{
                int day = 1;
                int flag = 1;
                int tempt = day;
            }
            @while (day <= daysInMonth - 7)
            {
                @if (flag == 1)
                {
                    <tr>
                        @if (daysleft != 0)
                        {
                            <td colspan="@daysleft"></td>
                        }
                        @for (int curr = 1; curr <= 7 - daysleft; curr++)
                        {
                            <td style=" background : #efabd2;text-align : center">@day</td>
                            day++;
                        }
                    </tr>
                    tempt = 1;
                    <tr>
                        @if (daysleft != 0)
                        {
                            <td colspan="@daysleft"></td>
                        }
                        @for (int curr = 1; curr <= 7 - daysleft; curr++)
                        {
                            <td id="loadprevdate_@tempt"></td>
                            tempt++;
                        }
                    </tr>
                    tempt = 1;
                    <tr>
                        @if (daysleft != 0)
                        {
                            <td colspan="@daysleft"></td>
                        }
                        @for (int curr = 1; curr <= 7 - daysleft; curr++)
                        {
                            <td id="date_@tempt"></td>
                            tempt++;
                        }
                    </tr>
                    tempt = 1;
                    <tr>
                        @if (daysleft != 0)
                        {
                            <td colspan="@daysleft"></td>
                        }
                        @for (int curr = 1; curr <= 7 - daysleft; curr++)
                        {
                            <td id="loadnextdate_@tempt"></td>
                            tempt++;
                        }
                    </tr>

                    flag = 2;
                }
                else
                {
                    tempt = day;
                    var tempt2 = tempt;
                    <tr>
                        @for (int curr = 1; curr <= 7; curr++)
                        {
                            <td style=" background : #efabd2;text-align : center">@day</td>
                            day++;
                        }
                    </tr>
                    <tr>
                        @for (int curr = 1; curr <= 7; curr++)
                        {
                            <td id="loadprevdate_@tempt"></td>
                            tempt++;
                        }
                    </tr>
                    tempt = tempt2;
                    <tr>
                        @for (int curr = 1; curr <= 7; curr++)
                        {
                            <td id="date_@tempt"></td>
                            tempt++;
                        }
                    </tr>
                    tempt = tempt2;
                    <tr>
                        @for (int curr = 1; curr <= 7; curr++)
