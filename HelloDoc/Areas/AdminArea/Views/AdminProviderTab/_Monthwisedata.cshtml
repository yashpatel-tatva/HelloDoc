            </tr>
        </tbody>
    </table>
</div>
@foreach (var shift in Model.Shifts)
{
    <script>
        var shiftdate = @shift.StartTime.ToString("dd");
        var timeslot = "date_" + shiftdate;
        var color = "";
        if (@shift.Status == 1) {
            color = "#efabd2";
        }
        if (@shift.Status == 2) {
            color = "#a5cea4";
        }
        $('#' + timeslot).css("padding", "0px")
        $('#' + timeslot).append('<div class="events" id="event_@shift.ShiftId" data-id="@shift.ShiftId" data-url="MonthWiseData">@shift.StartTime.ToString("hh:mm tt") - @shift.EndTime.ToString("hh:mm tt")</div>');
        $('#event_@shift.ShiftId').css("background-color", color);
    </script>
}
<script src="~/js/Events.js" asp-append-version="true"></script>
